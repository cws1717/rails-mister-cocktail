<h1>Welcome to the Mother Fucking Show!</h1>


<ul>
  <%= @cocktail.name %>
  <% @cocktail.doses.each do |dose| %>
<li><%= dose.ingredient.name %>,
  <%= dose.description %>
    <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

  </li>
  <% end %>


</ul>

<button class="btn"><%= link_to "Return to Cocktail Index", cocktails_path  %></button>
<button class="btn"><%= link_to "Add New Ingredient/Dose", new_cocktail_dose_path(@cocktail)  %></button>
