    </div>
</div>

<div class="col-xs-12 col-md-4">
  <div class="show-options">
   <%= link_to "Home", cocktails_path, :class => "btn mm-button" %>
     </div>
</div>
<div class="col-xs-12 col-md-4">
  <div class="show-options">

   <%= link_to "Add New Ingredient", new_cocktail_dose_path(@cocktail), :class => "btn mm-button"  %>
     </div>
</div>
<div class="col-xs-12 col-md-4">
  <div class="show-options">
   <%= link_to "Remove Cocktail", cocktail_path,
   method: :delete,
   data: { confirm: "Are you sure?" },
   :class => "btn mm-button" %>
     </div>
</div>

</div>
 </div>


